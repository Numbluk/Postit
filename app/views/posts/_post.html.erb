<div class="clearfix">
  <% if logged_in? %>
    <div class="well span0 text-center">
      <%= link_to votes_post_path(post, vote: true), method: :post do %>
        <i class="icon-arrow-up"></i>
      <% end %>

      <div><%= post.sum_votes %> Votes</div>

      <%= link_to votes_post_path(post, vote: false), method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  <% end %>

  <div class='row'>
    <div class='span8 well'>
      <%= render post.categories %>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p>
        <small>by: <%= post.creator.username %></small>
        <small>at:  <%= fix_date(post.created_at) %></small>
      </p>
      <small>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </small>
    </div>
  </div>
</div>
